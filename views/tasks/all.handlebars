<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
        <li>
            {{#if this.done}}
                <a href="/" class="title done">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}
            <div class="actions">
                <form action="/task/updateStatus" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button type="submit">
                        <a href="/"><i class="bi bi-check2"></i></a>
                    </button>
                </form>
                <a href="/task/att/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
                <form action="/task/remove" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
    {{/each}}
</ul>